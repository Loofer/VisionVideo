<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/gray_light" />
            <solid android:color="@color/window_background_orgin" />
            <corners android:radius="4.0dip" />
            <padding android:left="@dimen/padding_half" android:top="@dimen/padding_half" android:right="@dimen/padding_half" android:bottom="@dimen/padding_half" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1.0px" android:color="@color/gray_light" />
            <corners android:radius="4.0dip" />
            <padding android:left="@dimen/padding_half" android:top="@dimen/padding_half" android:right="@dimen/padding_half" android:bottom="@dimen/padding_half" />
            <solid android:color="@color/window_background" />
        </shape>
    </item>
</selector>