<?xml version="1.0" encoding="utf-8"?><!-- shape如果不声明形状默认是正方形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置圆角 -->
    <corners android:radius="5dp"></corners>
    <!-- 设置填充色 -->
    <solid android:color="@color/gray"></solid>

    <padding
        android:bottom="2dp"
        android:left="10dp"
        android:right="10dp"
        android:top="2dp" />
    <!-- 设置边框的颜色和宽度 -->
    <stroke
        android:width="1dp"
        android:color="@color/gray"></stroke>
</shape>